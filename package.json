{
  "name": "mcp-versioning",
  "version": "1.0.0",
  "description": "MCP server for querying package versions across multiple ecosystems using deps.dev API",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-versioning": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/torresgol10/mcp-versioning.git"
  },
  "bugs": {
    "url": "https://github.com/torresgol10/mcp-versioning/issues"
  },
  "homepage": "https://github.com/torresgol10/mcp-versioning#readme",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "tsc -p tsconfig.tests.json && node --test dist/tests/**/*.test.js",
    "lint": "eslint src",
    "build:worker": "esbuild src/worker.ts --bundle --platform=browser --format=esm --outfile=dist/worker.js",
    "deploy:cloudflare": "wrangler deploy"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "package-versions",
    "deps.dev",
    "npm",
    "cargo",
    "pypi"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.21.1",
    "zod": "^3.25.0",
    "toml": "^3.0.0",
    "fast-xml-parser": "^5.3.1",
    "semver": "^7.6.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "@types/semver": "^7.5.8",
    "typescript": "^5.7.0",
    "esbuild": "^0.27.0",
    "wrangler": "^4.0.0",
    "zod-to-json-schema": "^3.24.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
